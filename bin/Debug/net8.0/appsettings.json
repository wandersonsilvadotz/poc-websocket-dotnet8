{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Information"
    },
    "Console": {
      "IncludeScopes": true,
      "TimestampFormat": "yyyy-MM-ddTHH:mm:ss.fffffffZ"
    }
  },

  "ElasticApm": {
    "ServerUrls": "http://elk-apm-server:8200",
    "ServiceName": "AppPlatformWebSocket",
    "Environment": "development",
    "SecretToken": "",
    "CaptureBody": "all",
    "TransactionSampleRate": 1.0
  },

  "Redis": {
    "Enabled": true,
    "ConnectionString": "localhost:6379",
    "Channel": "websocket-messages"
  },

  "Jwt": {
    "Issuer": "https://issuer.example.com",
    "Audience": "app-client",
    "SecretKey": "trocar-por-uma-chave-secreta-com-no-minimo-32-caracteres",
    "TokenLifetimeHours": 24,
    "ValidateLifetime": true,
    "ClockSkewSeconds": 30
  },

  "WebSocket": {
    "MaxMessageSize": 4096,
    "IdleTimeoutSeconds": 60,
    "HeartbeatIntervalSeconds": 30
  },

  "AllowedHosts": "*"
}
